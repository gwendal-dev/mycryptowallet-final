<% @title = "Alerts - MyCryptoWallet" %>

<h1 class="alert-title">Alerts</h1>

<div class="background"></div>

<div class="container200">
  <% i = 0 %>
  <% if @alerts != [] %>
    <% @coins.each do |coin| %>
      <% @alerts.each do |alert| %>
      <% if alert.coin != nil %>
      <% if alert.coin.upcase == coin.title %>

          <div class="item<%= i %>">
            <%= link_to edit_alert_path(alert), class: 'container-alert-item', action: 'go' do %>
            <div class="logo-text-alert">
              <%= image_tag(coin.avatar) %>
              <h1 class="name-coin-alert"><%= coin.title %></h1>
            </div>
            <h2 class="value-alert">Alert : <%= number_with_delimiter(alert.value.round(3), delimiter: ',') %>$</h2>
            <div class="value-price">Price : <%= number_with_delimiter(coin.price.round(3), delimiter: ',') %>$</div>
             <% end %>
             <%= link_to 'X', alert_path(alert), :method => :delete, data: { confirm: "Are you sure?" }, class: "cross"%>
          </div>


        <% i += 1 %>
      <% end %>
      <% end %>
    <% end %>
  <% end %>
    <%= link_to "New" , new_alert_path, class: "new_alert_btn" %>
  <% else %>
  <%= link_to "New", new_alert_path, class: "new-alert" %>
  <% end %>
</div>
