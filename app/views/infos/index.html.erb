
<div class="container" id="particles">

    <div class="row justify-content-center">
        <h1 class="h1 text-center">Last market news...</h1>
    </div>

    <div class="row p-3 justify-content-center">
        <% @data["data"].each do |news| %>
          <div class="card mb-3 m-2" style="width: 18rem; border-radius: 5%">
            <img src="<%= news["thumbnail"] %>" class="card-img-top" alt="..." height="200px" style="border-radius: 5%">
            <div class="card-body">
              <h5 class="card-title"> <%= news["symbol"] %> - <%= news["name"] %></h5>
              <p class="card-text"><%= news["title"] %></p>
              <p class="card-text"><small class="text-muted">Published by <%= news["publisher"] %> </small></p>
              <a href='<%= news["url"] %>'><button class="btn btn-primary float-right" style="border-radius: 5%">More details</button></a>
            </div>
          </div>
        <% end  %>
    </div>
</div>



