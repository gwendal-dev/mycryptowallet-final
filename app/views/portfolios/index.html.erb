<div id="header2" id="header">
  <h1>MyCryptoWallet</h1>
</div>
<div class="container2">
  <% if @portfolios %>
  <% @portfolios.each do |portfolio| %>
    <a href="portfolios/<%= portfolio.id %>">
    <div class="item">
    <ul>
      <li><%= portfolio.title %></li>
      <% total_quantity = 0 %>
      <% total = 0 %>
      <% portfolio.positions.each do |position|%>
        <% @coins.each do |coin| %>
          <% if coin.id == position.coin_id %>
            <% total_quantity = position.quantity %>
            <% total += total_quantity * coin.price %>
          <% end %>
        <% end %>
      <% end %>
      <li><%= total %></li>
    </ul>
    </div>
   </a>
  <% end %>
<% end %>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
  </button>

<!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New portfolio</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= form_for(@portfolio) do |f| %>
            <%= f.label :title %>
            <%= f.text_field :title %>
            <%= f.submit %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</ul>
</div>
