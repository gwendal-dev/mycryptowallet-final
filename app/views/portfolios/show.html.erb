<div id="header2" id="header">
  <h1>MyCryptoWallet</h1>
</div>

<figure class="highcharts-figure">
    <div id="container" data-positions="<%= @positions.to_json %>" data-coins= "<%= @coins.to_json %>">
    </div>
</figure>

  <div class="main-portfolio">
    <a href="#"><h1 class="total-value"><%= @total.round(2) %>$</h1></a>
    <div>
      <%= link_to '+', new_portfolio_position_path(@portfolio), class: 'small-darkblue'%>
      <div class="recap"><p class="gain">10%</p><p class="period">24H</p></div>
    </div>
  </div>
    <div class="container2">
      <% @coins.each do |coin| %>
      <% if coin.quantity > 0 %>
      <a href="#">
      <div class="item">
        <div class="logo-text">
          <%= image_tag(coin.avatar) %>
          <h1 class="name-coin"><%= coin.title %></h1>
          <h1 class="value"><%= coin.price %>$</h1>
        </div>
        <div class="small-red">-10%</div>
          <div class="position">
          <div><%= (coin.quantity * coin.price).round(2)%>$</div>
          <div><%= coin.quantity.round(2) %></div>
        </div>
      </div>
    </a>
    <% end %>
  <% end %>
</div>
